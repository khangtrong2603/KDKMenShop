@model IEnumerable<DanhGiaSp>
@{
    ViewData["title"] = "Danh Sách Đánh Giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}
<style>
    th, td {
        text-align: left;
        padding: 8px;
    }

        /* Đặt width cho từng cột */
        th:nth-child(1),
        td:nth-child(1) {
            width: 5%; /* width cho cột số thứ tự */
        }

        th:nth-child(2),
        td:nth-child(2) {
            width: 20%; /* width cho cột tên sản phẩm */
            white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
        }

        th:nth-child(3),
        td:nth-child(3) {
            width: 20%; /* width cho cột tên sản phẩm */
            white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
        }

        th:nth-child(6),
        td:nth-child(6) {
            white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
        }

        th:nth-child(7),
        td:nth-child(7) {
            width: 5%; /* width cho cột số thứ tự */
        }

        th:nth-child(8),
        td:nth-child(8) {
            width: 5%; /* width cho cột số thứ tự */
        }

        th:nth-child(9),
        td:nth-child(9) {
            width: 5%; /* width cho cột số thứ tự */
        }
    /* Thêm scrollbar ngang */
    .table-container {
        overflow-x: auto;
    }


    .star {
        color: gold; /* Màu vàng */
        font-size: 24px; /* Kích thước lớn hơn */
    }
    .square-image {
        width: 100px; /* Độ rộng cố định */
        height: 100px; /* Chiều cao cố định */
        object-fit: cover; /* Đảm bảo hình ảnh không bị biến đổi */
    }
</style>

<div>
    <div>
        <h2>Danh Sách Đánh Giá</h2>
    </div>
    
</div>

<!-- Đặt bảng trong container để thêm thanh lướt ngang -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Đánh Giá</th>
                <th scope="col">Bình Luận</th>
                <th scope="col">Hình Ảnh</th>
                <th scope="col">Mã Sản Phẩm</th>
                <th scope="col">Người Đánh Giá</th>
                <th scope="col">Ngày</th>
               
                <th scope="col">Quản lý</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDanhGia</td>
                    <td>
                        @{
                            // Tạo một vòng lặp để hiển thị số dấu sao tương ứng với giá trị của trường "DanhGia"
                            for (int i = 1; i <= item.DanhGia; i++)
                            {
                                <span class="star">&#9733;</span>
                            }
                        }
                    </td>
                    <td>@item.BinhLuan</td>
                    
                    <td>
                        <img style="height:100px;width:100px;" src="~/images/@item.HinhAnh">
                    </td>
                    <td>@item.MaSanPham</td>
                    <td>@item.IdNavigation.IdTkNavigation.HoTen</td>
                    <td>@item.NgayDanhGia</td>

                    
                    <td>
                        <a asp-controller="Review" class="btn btn-warning btn-sm" asp-action="TraLoiDanhGia" asp-route-id="@item.MaDanhGia">Trả Lời</a>
                        @* <a asp-controller="Review" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaSanPham">Xóa</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>