@model IEnumerable<LoaiSp>
@{
    ViewData["title"] = "Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}
<style>
    th, td {
        text-align: left;
        padding: 8px;
    }

    /* Đặt width cho từng cột */
    th:nth-child(1),
    td:nth-child(1) {
        width: 5%; /* width cho cột số thứ tự */
    }

    th:nth-child(2),
    td:nth-child(2) {
        width: 20%; /* width cho cột tên sản phẩm */
        white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
    }

    th:nth-child(6),
    td:nth-child(6) {
        white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
    }

    /* Thêm scrollbar ngang */
    .table-container {
        overflow-x: auto;
    }
</style>

<div>
    <div>
        <h2>Danh Mục Sản Phẩm</h2>
    </div>
    <div style="margin-top: 10px; margin-bottom: 10px;"> <!-- Thêm phần tử div và margin-top -->
        <a asp-action="Create" class="btn btn-success btn-sm" asp-controller="Category">Thêm Danh Mục Sản Phẩm</a>
    </div>
</div>

<!-- Đặt bảng trong container để thêm thanh lướt ngang -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên Loại</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                            <tr>
                                <td>@item.MaLoaiSp</td>
                                <td>@item.TenLoaiSp</td>
                                
                               
                                <td>
                                    <a asp-controller="Category" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaLoaiSp">Sửa</a>
                                    <a asp-controller="Category" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaLoaiSp">Xóa</a>
                                </td>
                            </tr>
            }
        </tbody>
    </table>
</div>
</div>