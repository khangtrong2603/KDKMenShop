@model IEnumerable<SanPham>
@{
    ViewData["title"] = "Danh Sách Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}
<style>
    th, td {
        text-align: left;
        padding: 8px;
    }

    /* Đặt width cho từng cột */
    th:nth-child(1),
    td:nth-child(1) {
        width: 5%; /* width cho cột số thứ tự */
    }

    th:nth-child(2),
    td:nth-child(2) {
        width: 20%; /* width cho cột tên sản phẩm */
        white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
    }

        th:nth-child(3),
        td:nth-child(3) {
            width: 20%; /* width cho cột tên sản phẩm */
            white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
        }
    th:nth-child(6),
    td:nth-child(6) {
        white-space: normal; /* Cho phép xuống dòng nếu nội dung quá dài */
    }

        th:nth-child(7),
        td:nth-child(7) {
            width: 5%; /* width cho cột số thứ tự */
        }

        th:nth-child(8),
        td:nth-child(8) {
            width: 5%; /* width cho cột số thứ tự */
        }

        th:nth-child(9),
        td:nth-child(9) {
            width: 5%; /* width cho cột số thứ tự */
        }
    /* Thêm scrollbar ngang */
    .table-container {
        overflow-x: auto;
    }
</style>

<div>
    <div>
        <h2>Danh Sách Sản Phẩm</h2>
    </div>
    <div style="margin-top: 10px; margin-bottom: 10px;"> <!-- Thêm phần tử div và margin-top -->
        <a asp-action="Create" class="btn btn-success btn-sm" asp-controller="Product">Thêm Sản Phẩm</a>
    </div>
</div>

<!-- Đặt bảng trong container để thêm thanh lướt ngang -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên Sản Phẩm</th>
                <th scope="col">Vật Liệu</th>
                <th scope="col">Giá</th>
                <th scope="col">Hình Ảnh</th>
                <th scope="col">Mô Tả</th>
                <th scope="col">Loại Sản Phẩm</th>
                <th scope="col"> Bộ Sưu Tập </th>
                <th scope="col">Mã Giảm Giá </th>
                <th scope="col">Quản lý</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.MaSanPham</td>
                            <td>@item.TenSanPham</td>
                            <td>@item.MaVatLieuNavigation.TenVatLieu</td>
                            <td>@item.Gia.ToString("#,##0")</td>
                            <td>
                                <img style="height:50px;width:50px;" src="~/images/@item.HinhAnh">
                            </td>
                            <td>@item.MoTa</td>
                            <td>@item.MaLoaiSp</td>
                    <td>@item.MaBoSuuTap</td>

                    <td>@item.MaChiTietGiam</td>
                            <td>
                                <a asp-controller="Product" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaSanPham">Sửa</a>
                                    <a asp-controller="Product" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaSanPham">Xóa</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>
</div>