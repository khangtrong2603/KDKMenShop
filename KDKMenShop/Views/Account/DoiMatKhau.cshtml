

@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/logins/login-12/assets/css/login-12.css">
    <link rel="stylesheet" href="../KDKTrangChu/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/style.css" type="text/css">
    <link rel="stylesheet" href="../KDKTrangChu/css/dropdownlayout.css" type="text/css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
    </style>
</head>
<body>
    <section class=" gradient" style="margin-bottom:100px;">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-right:350px;">
                    <div class="card " style="border-radius: 1rem; width: 800px;">
                        <div class="card-body p-4 text-center">

                            <div class="mb-md-4 mt-md-3 pb-5 ">

                                <h2 style="color: #343A40;" class="fw-bold mb-2 text-uppercase">Đổi mật khẩu</h2>


                                @*kiểm tra lỗi*@

                                @if (ViewBag.ChangePasswordSuccess != null)
                                {
                                    if ((bool)ViewBag.ChangePasswordSuccess)
                                    {
                                        <p style="color:green">Mật khẩu đã được đổi thành công!</p>
                                    }
                                    else
                                    {
                                        <p style="color:red">Đã có lỗi xảy ra. Không thể đổi mật khẩu!</p>
                                    }
                                }
                                <div>


                                    <form method="post" action="@Url.Action("DoiMatKhau", "Account")">
                                        <input type="hidden" name="email" value="@ViewBag.Email" />
                                        <div>
                                            <div class="col-6">


                                                <input type="password" id="newPassword" name="newPassword" required placeholder="Mật Khẩu Mới" style="padding: 10px;  margin-top: 10px;margin-left: 180px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 20px; width: 100%; box-sizing: border-box;" />

                                            </div>
                                            <div class="col-6">


                                                <input type="password" id="confirmNewPassword" name="confirmNewPassword" required placeholder="Xác Nhận Mật Khẩu Mới" style="padding: 10px;margin-left:180px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 20px; width: 100%; box-sizing: border-box;" />

                                            </div>
                                            <button id="submitButton" style="background-color: #343A40; margin-left:10px;border-radius: 40px; width: 100px; padding: 10px; margin-top: 20px; color: white; border: none; cursor: pointer;" class="btn-outline-light btn-lg px-2" type="submit"> Gửi</button>
                                        </div>
                                    </form>
                                </div>



                            </div>


                            <div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>